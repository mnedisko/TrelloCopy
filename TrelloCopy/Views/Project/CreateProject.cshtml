@model ProjectDataViewModel

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width:500px;">
        <h2 class="text-center">Details</h2>
        <form asp-action="CreateProject" method="post">
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="ProjectName">Project Name</label>
                    <input type="text" class="form-control" name="ProjectName" id="ProjectName" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
                 <div class="form-group col-md-6">
                    <label for="ProjectTitle">Add Description of the project(optionel)</label>
                    <input type="text" class="form-control" name="ProjectTitle" id="ProjectTitle" />
                </div> 
            </div>
            <br />
            <button type="submit" class="btn btn-success w-100">Create a Project</button>
        </form>
    </div>
</div>
